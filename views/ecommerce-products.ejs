<!DOCTYPE html>
<html>
    <head>
        <% include partials/head %>
        
    </head>


    <body class="fixed-left">

        <!-- Begin page -->
        <div id="wrapper">

            <!-- Top Bar Start -->
            <div class="topbar">
                <!-- LOGO -->
                <div class="topbar-left">
                    <div class="text-center">
                        <a href="/" class="logo"><i class="icon-magnet icon-c-logo"></i><span>Ub<i class="md md-album"></i>ld</span></a>
                        <!-- Image Logo here -->
                        <!--<a href="/" class="logo">-->
                            <!--<i class="icon-c-logo"> <img src="assets/images/logo_sm.png" height="42"/> </i>-->
                            <!--<span><img src="assets/images/logo_light.png" height="20"/></span>-->
                        <!--</a>-->
                    </div>
                </div>

            <% include partials/menu %>



            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->                      
            <div class="content-page">
                <!-- Start content -->
                <div class="content">
                    <div class="container">

                        <!-- Page-Title -->
						<div class="row">
							<div class="col-sm-12">
								<h4 class="page-title">Sản phẩm của tôi</h4>
								<ol class="breadcrumb">
									<li>
										<a href="#">Ubold</a>
									</li>
									<li class="active">
										Sản phẩm của tôi
									</li>
								</ol>
							</div>
						</div>

                        <!-- SECTION FILTER
                        ================================================== -->
                        


                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <h4 class="m-t-0 header-title"><b>Sản phẩm</b></h4>
                                    
        
                                    <table id="datatable" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>                                    
                                                <th style="width: 100px">Ảnh</th>                                            
                                                <th>Tên</th>
                                                <th>Số lượng</th>
                                                <th>Đã bán</th>
                                                <!-- <th>Trạng thái</th> -->
                                                <th style="min-width: 80px;">Chức năng</th>
                                            </tr>
                                        </thead>
                                        
                                        <tbody>
                                            <% prodList.forEach(function(item){ 
                                                %>
                                            <tr>
                                                
                                                <td>
                                                    <img src="http://bros-admin.herokuapp.com/assets/images/<%= item.images[0] %>"class="thumb-img" width="100px" height="100px" alt="work-thumbnail">
                                                </td>
                                                
                                                <td>
                                                    <%= item.name %>
                                                </td>
                                                
                                                <td>
                                                    <%= item.stock %>
                                                </td>

                                                <td>
                                                    <%= item.buyCounts %>
                                                </td>

                                            

                                
                                         
                                                
                                                <td>
                                                    <a href="/shop/edit/<%= item._id%>" class="table-action-btn"><i class="md md-edit"></i></a>
                                                    <a href="/shop/delete/<%= item._id%>" class="table-action-btn" onclick="return confirm('Bạn muốn xoá <%= item.name %>?');"><i class="md md-close"></i></a>
                                                    
                                                </td>
                                                
                                            </tr>    
                                            <% }); %>                                      
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>


                       
                    </div> <!-- container -->
                               
                </div> <!-- content -->

                <footer class="footer text-right">
                    © 2016. All rights reserved.
                </footer>

            </div>
            
            
            <!-- ============================================================== -->
            <!-- End Right content here -->
            <!-- ============================================================== -->


           
        </div>
        <!-- END wrapper -->


    
