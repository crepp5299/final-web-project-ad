                            <!--<span><img src="assets/images/logo_light.png" height="20"/></span>-->
                        <!--</a>-->
                    </div>
                </div>

            <% include partials/menu %>



            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->                      
            <div class="content-page">
                <!-- Start content -->
                <div class="content">
                    <div class="container">

                        <!-- Page-Title -->
                        <div class="row">
                            <div class="col-sm-12">
                                <h4 class="page-title">Đơn hàng</h4>
                                <ol class="breadcrumb">
                                    <li><a href="#">Ubold</a></li>
                                    <li><a href="#">eCommerce</a></li>
                                    <li class="active">Đơn hàng</li>
                                </ol>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <h4 class="m-t-0 header-title"><b>Đơn hàng</b></h4>
                                    
        
                                    <table id="datatable" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>                                    
                                                <th width="80px">Mã Đơn Hàng</th>                                            
                                                <th width="100px">Địa chỉ</th>
                                                <th width="60px">SĐT</th>
                                                <th>Ngày đặt</th>
                                                <th>Hàng</th>
                                                <th>Tổng thu</th>
                                                <th>Trạng thái</th>
                                                
                                                
                                            </tr>
                                        </thead>
                                        
                                        <tbody>
                                            <% orders.forEach(function(order){ 
                                                %>
                                            <tr>
                                                
                                                <td>
                                                    <%= order._id %>
                                                </td>
                                                
                                                
                                                <td>
                                                    <%= order.address %></a>
                                                </td>

                                                
                                            
                                                <td>
                                                    <%= order.phoneNumber%>
                                                </td>

                                                <td>
                                                    <%= String(order.date).replace('GMT+0700 (Indochina Time)', '')%>
                                                </td>

                                                <td>
                                                    <% order.generateCartArray().forEach(function(item) {%>
                                                        <div><%= item.qty %> * <%= item.item.name %></div>
                                                        <% }) %>
                                                </td>

                                                <td>
                                                    <%= order.cart.totalPrice %>
                                                </td>


                                                <td>

                                                <%if (order.status == 0) { %>
                                                    <span class="label label-success">Đã giao hàng</span>
                                                <% } %>

                                                <%if (order.status == 1) { %>
                                                    <span class="label label-warning">Đang giao hàng</span>
                                                <% } %>

                                                <%if (order.status == 2) { %>
                                                    <span class="label label-info">Đã tiếp nhận</span>
                                                <% } %>
                                                <%if (order.status == 3) { %>
                                                    <span class="label label-danger">Đã huỷ</span>
                                                <% } %>

                                                </td>

                                                
                                               


                                        
                                            </tr>    
                                            <% }); %>                                      
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        
                        
                        

                    </div> <!-- container -->
                               
                </div> <!-- content -->

                <footer class="footer text-right">
                    © 2016. All rights reserved.
                </footer>

            </div>
            
			
            
            
            <!-- ============================================================== -->
            <!-- End Right content here -->
